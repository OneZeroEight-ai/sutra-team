# ============================================================================
# sutra.team — Environment Variables
# ============================================================================
# Copy this file to .env.local and fill in real values.
# For Vercel: paste each variable into Project Settings → Environment Variables
# For agent server: copy the AGENT SERVER section to server/agents/.env
# ============================================================================

# --------------------------------------------------------------------------
# SAMMASUIT BACKEND
# --------------------------------------------------------------------------
# SammaSuit.com backend API base URL
# Source: SammaSuit.com infra team / config
NEXT_PUBLIC_SUTRA_API_URL=__PLACEHOLDER_SAMMASUIT_API_URL__

# --------------------------------------------------------------------------
# LIVEKIT — Real-Time Communication
# --------------------------------------------------------------------------
# LiveKit WebSocket URL (public, exposed to browser)
# Source: LiveKit Cloud dashboard → Project settings
# Format: wss://sutra-team-xxxxx.livekit.cloud
NEXT_PUBLIC_LIVEKIT_URL=__PLACEHOLDER_LIVEKIT_WS_URL__

# LiveKit API Key (server-side only — do NOT prefix with NEXT_PUBLIC_)
# Source: LiveKit Cloud dashboard → Project settings
LIVEKIT_API_KEY=__PLACEHOLDER_LIVEKIT_API_KEY__

# LiveKit API Secret (server-side only — do NOT prefix with NEXT_PUBLIC_)
# Source: LiveKit Cloud dashboard → Project settings
LIVEKIT_API_SECRET=__PLACEHOLDER_LIVEKIT_API_SECRET__

# LiveKit SIP endpoint URI (for SIP trunk provider configuration)
# Source: LiveKit Cloud dashboard → Telephony
LIVEKIT_SIP_URI=__PLACEHOLDER_LIVEKIT_SIP_URI__

# SIP Trunk ID (created after running configure_sip.py)
# Source: Output of server/agents/scripts/configure_sip.py
SIP_TRUNK_ID=__PLACEHOLDER_SIP_TRUNK_ID__

# --------------------------------------------------------------------------
# TELEPHONY
# --------------------------------------------------------------------------
# Public dial-in phone number for the Phone Portal
# Source: LiveKit Phone Numbers / Twilio / Telnyx
# Format: +1-888-XXX-XXXX
NEXT_PUBLIC_PHONE_NUMBER=__PLACEHOLDER_PHONE_NUMBER__

# Twilio SIP trunk SID (only if using Twilio instead of LiveKit Phone Numbers)
# Source: Twilio Console → Elastic SIP Trunking
TWILIO_TRUNK_SID=__PLACEHOLDER_TWILIO_TRUNK_SID__

# Telnyx connection ID (only if using Telnyx instead of LiveKit/Twilio)
# Source: Telnyx Mission Control
TELNYX_CONNECTION_ID=__PLACEHOLDER_TELNYX_CONNECTION_ID__

# --------------------------------------------------------------------------
# AI / LLM — Council Agent Pipeline
# --------------------------------------------------------------------------
# Anthropic Claude API key (powers all council agent LLM calls)
# Source: https://console.anthropic.com → API Keys
ANTHROPIC_API_KEY=__PLACEHOLDER_ANTHROPIC_API_KEY__

# Deepgram API key (Speech-to-Text — Nova-3)
# Source: https://console.deepgram.com → API Keys
DEEPGRAM_API_KEY=__PLACEHOLDER_DEEPGRAM_API_KEY__

# Cartesia API key (Text-to-Speech — Sonic-3)
# Source: https://play.cartesia.ai → Dashboard → API Keys
CARTESIA_API_KEY=__PLACEHOLDER_CARTESIA_API_KEY__

# --------------------------------------------------------------------------
# BILLING (Future — Phase 5+)
# --------------------------------------------------------------------------
# Stripe API key
# Source: https://dashboard.stripe.com → Developers → API Keys
STRIPE_SECRET_KEY=__PLACEHOLDER_STRIPE_KEY__

# Stripe publishable key (public, exposed to browser)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=__PLACEHOLDER_STRIPE_PUBLISHABLE_KEY__

# --------------------------------------------------------------------------
# ANALYTICS (Optional)
# --------------------------------------------------------------------------
# Google Analytics 4 measurement ID
# Source: GA4 property → Admin → Data Streams → Web
NEXT_PUBLIC_GA_ID=__PLACEHOLDER_GA_MEASUREMENT_ID__

# --------------------------------------------------------------------------
# DNS & INFRASTRUCTURE (Reference — not runtime env vars)
# --------------------------------------------------------------------------
# Domain registrar where sutra.team is registered
# DOMAIN_REGISTRAR=__PLACEHOLDER_DOMAIN_REGISTRAR__

# Registrar account identifier
# REGISTRAR_ACCOUNT=__PLACEHOLDER_REGISTRAR_ACCOUNT__

# DNS target for api.sutra.team (future direct API access)
# API_DNS_TARGET=__PLACEHOLDER_API_DNS_TARGET__

# DNS target for connect.sutra.team (future dedicated Connect subdomain)
# CONNECT_DNS_TARGET=__PLACEHOLDER_CONNECT_DNS_TARGET__
